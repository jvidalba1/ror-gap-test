<h1>People index</h1>
<table border=1>
  <thead>
    <tr>
      <th>Full name</th>
      <th>Email</th>
      <th>Age</th>
      <th>Actions</th>
    </tr>
  </thead>  
  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.full_name %></td>
        <td><%= person.email %></td>
        <td><%= person.age %></td>
        <td><%= link_to "Delete", person, method: :delete, data: { confirm: "Are you sure?" }%></td>
      </tr>
    <% end %>
  </tbody>
</table>
