
<%= form_for @person do |f| %>
  <% if @person.errors.any? %>
    <% @person.errors.full_messages.each do |message| %>
      <div class="row">
        <div class="col-md-12">
          <ul>
            <li><%= message %> </li>
          </ul>
        </div>
      </div>
    <% end %>
  <% end %>
  <div class="form-group">
    <div class="row">
      <div class="col-md-3">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, class: "form-control" %>
      </div>
      <div class="col-md-3">
        <%= f.label :last_name %>
        <%= f.text_field :last_name, class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col-md-3">
        <%= f.label :email %>
        <%= f.text_field :email, class: "form-control" %>
      </div>
      <div class="col-md-3">
        <%= f.label :job %>
        <%= f.text_field :job, class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col-md-3">
        <%= f.label :bio %>
        <%= f.text_area :bio, class: "form-control" %>
      </div>
      <div class="col-md-3">
        <%= f.label :gender %>
        <%= f.select(:gender, Person.genders.keys, {}, { class: "form-control" } ) %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col-md-3">
        <%= f.label :birthdate %>
        <%= f.date_select :birthdate, { :start_year => Date.today.year - 100, :end_year => Date.today.year }, { :class => "form-control" } %>
      </div>
      <div class="col-md-3">
        <%= f.label :picture %>
        <%= f.file_field :picture, class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col-md-6">
        <%= f.submit 'Submit', class: "form-control btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>
