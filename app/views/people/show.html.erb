
<div class="row">
  <div class="col-md-3">
    <%= image_tag @person.picture.url, class: "img-thumbnail", style: "width: 320px; height: 280px;" %>
  </div>
  <div class="col-md-9">
  
    Name: <%= @person.full_name %> <br>
    Email: <%= @person.email %> <br>
    Birthdate: <%= @person.birthdate %> <br>
    Gender: <%= @person.gender %> <br>
    Job: <%= @person.job %> <br>
    Bio: <%= @person.bio %> <br>
    <%= link_to "Edit information", edit_person_path(@person), class: "btn btn-default" %> <br>
    <%= link_to "Delete", @person, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
  </div>   
</div>
<div class="row">
  <div class="col-md-2">
    <%= link_to "Cancel", people_path, class: "btn btn-default" %>
  </div>
</div>




