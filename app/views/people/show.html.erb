<table border="1">
  <tr>
    <td rowspan="2">Picture</td>
    <td><%= @person.full_name %></td>
  </tr>
  <tr>
    <td><%= @person.email %></td>
  </tr>
  <tr>
    <td>Birthdate</td>
    <td><%= @person.birthdate %></td>
  </tr>
  <tr>
    <td>Gender</td>
    <td><%= @person.gender %></td>
  </tr>
  <tr>
    <td>Job</td>
    <td><%= @person.job %></td>
  </tr>
  <tr>
    <td>Bio</td>
    <td><%= @person.bio %></td>
  </tr>
  <tr>
    <td><%= link_to "Edit information", edit_person_path(@person) %></td>
    <td><%= link_to "Delete", @person, method: :delete, data: { confirm: "Are you sure?" } %></td>
  </tr>
  <tr>
    <td><%= link_to "Cancel", people_path %></td>
  </tr>
</table>
